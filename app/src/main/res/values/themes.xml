<!-- themes_light.xml -->
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme for light mode. -->
    <style name="Base.Theme.CrispyCrumbs.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/crispy_orange_light</item>
        <item name="colorPrimaryDark">@color/crispy_orange_light</item>
        <item name="colorAccent">@color/crispy_orange_light</item>
        <item name="android:colorBackground">@color/off_white</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:windowBackground">@color/off_white</item>
    </style>

    <style name="Theme.CrispyCrumbs.Light" parent="Base.Theme.CrispyCrumbs.Light">
        <!-- Add specific customizations for your app -->
    </style>

    <!-- Define other styles for light mode here -->

    <style name="SCREEN">
        <item name="android:background">@color/off_white</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="TEXT">
        <item name="android:textAppearance">@style/TextAppearance.BoldText</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@drawable/diff_round_corners_orange</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LIKE_BUTTON">
       <item name="android:background">@drawable/like_button_style</item>
    </style>

    <style name="DISLIKE_BUTTON">
        <item name="android:background">@drawable/dislike_button_style</item>
    </style>


    <style name="SEARCHBAR">
        <item name="android:background">@color/off_white</item>
    </style>

    <style name="LOGOTEXT">
        <item name="android:tint">@color/off_white</item>
    </style>

    <style name="CONTAINER">
        <item name="android:background"> @color/off_white</item>
    </style>
</resources>
