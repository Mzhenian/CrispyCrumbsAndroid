<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EditProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/round_corners_gray"
        tools:context=".view.EditProfileFragment">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/TitleUploadVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/diff_round_corners_orange"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingHorizontal="16dp"
                    android:text="Edit Profile"
                    android:textColor="@color/absolute_ofek_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                <!-- Profile Picture -->
                <TextView
                    android:id="@+id/errorDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#D32F2F"
                    android:visibility="gone"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Picture :"
                    android:textAppearance="@style/TextAppearance.BoldText"
                    android:textColor="@color/black_div"
                    android:layout_marginTop="10dp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btn_change_profile_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/default_profile_picture"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Circular" />

                <!-- Full Name Edit Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name :"
                    android:textAppearance="@style/TextAppearance.BoldText"
                    android:textColor="@color/black_div"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/editFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_white"
                    android:hint="Full Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingVertical="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/gray_light" />

                <!-- Username Edit Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username :"
                    android:textAppearance="@style/TextAppearance.BoldText"
                    android:textColor="@color/black_div"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/edit_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_white"
                    android:hint="@string/user_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingVertical="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/gray_light" />

                <!-- Email Edit Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:textAppearance="@style/TextAppearance.BoldText"
                    android:textColor="@color/black_div"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/edit_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_white"
                    android:hint="@string/prompt_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:paddingVertical="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/gray_light" />

                <!-- Password Edit Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password :"
                    android:textAppearance="@style/TextAppearance.BoldText"
                    android:textColor="@color/black_div"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/edit_user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_white"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:paddingVertical="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/gray_light" />

                <!-- Confirm Password Edit Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password :"
                    android:textAppearance="@style/TextAppearance.BoldText"
                    android:textColor="@color/black_div"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_white"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:paddingVertical="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/gray_light" />

                <!-- Phone Number Edit Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number :"
                    android:textAppearance="@style/TextAppearance.BoldText"
                    android:textColor="@color/black_div"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/editPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_white"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:paddingVertical="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/gray_light" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="24dp">

                    <!-- Save Changes Button -->
                    <ImageButton
                        android:id="@+id/btnUpdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/update"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="Save Changes"
                        android:padding="16dp" />

                    <!-- Delete User Button -->
                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/delete"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="Delete User"
                        android:padding="16dp" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Optional: Add guidelines or barriers if needed -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
