<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustPan"
    tools:context=".view.EditVideoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="89dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/round_corners_gray"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/title_edit_video_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/diff_round_corners_orange"
                android:paddingHorizontal="10dp"
                android:text="@string/editing_video_title"
                android:textColor="@color/black_div"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingTop="5dp"

                android:text="Leave blank to keep unchanged"
                android:textColor="@color/gray_dark"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txt_choose_video_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/original_thumbnail"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/choose_video_edit"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:gravity="center">

<!--                <ProgressBar-->
<!--                    android:id="@+id/progress_bar_edit"-->
<!--                    style="?android:attr/progressBarStyleHorizontal"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="200dp"-->
<!--                    android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"-->
<!--                    android:progressDrawable="@android:drawable/progress_horizontal"-->
<!--                    android:visibility="invisible"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent" />-->

                <ImageView
                    android:id="@+id/img_original_thumbail_edit"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:clickable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/layer_1" />
            </RelativeLayout>


            <TextView
                android:id="@+id/video_title_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/diff_round_top_right_corner_orange"
                android:text="@string/video_title"
                android:textColor="@color/black_div"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_video_title_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corners_white"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="Video title"
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/video_description_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/diff_round_top_right_corner_orange"
                android:text="Video description:    "
                android:textColor="@color/black_div"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_video_description_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corners_white"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:gravity="top"
                android:hint="Video description...\n\n\n\n"
                android:inputType="text|textMultiLine"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tv_category_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/diff_round_top_right_corner_orange"
                android:text="@string/video_category"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_category_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corners_white"
                android:padding="10dp"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_video_tag_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_corners_white"
                    android:hint="Add tag(s)"
                    android:padding="10dp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_add_video_tag_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:backgroundTint="@color/crispy_orange_dark"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tags_preview_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layoutManager="GridLayoutManager"
                tools:listitem="@layout/recycler_view_item"
                tools:spanCount="5" />

            <RelativeLayout
                android:id="@+id/choose_thumbnail_edit"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="fitCenter">

                <Button
                    android:id="@+id/btn_choose_thumbnail_edit"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignTop="@id/thumbnail_image_holder_edit"
                    android:layout_alignBottom="@id/thumbnail_image_holder_edit"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/txt_choose_thumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="new thumbnail:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/thumbnail_image_holder_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:clickable="false"
                    android:src="@drawable/layer_1" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/update" />

                <ImageButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@drawable/delete" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBarEditVideo"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
