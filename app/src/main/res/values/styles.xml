<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CrispyCrumbs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- todo Customize your theme here. -->
    </style>

    <style name="TextAppearance.BoldText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="custom_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/small_button_style_light</item>
        <item name="android:textColor">@android:color/holo_orange_light</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="video_title">Video Title</style>

    <!-- Define a circular shape appearance -->
    <style name="ShapeAppearance.Circular" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>

