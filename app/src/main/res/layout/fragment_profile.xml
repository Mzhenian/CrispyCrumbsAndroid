<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.ProfileFragment"
    android:background="@color/ofek_white"
    style="@style/SCREEN">

    <!-- Profile Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_profile_picture"
            android:contentDescription="@string/profile_picture"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Circular" />

        <!-- Username and Subscriber Count in Horizontal Layout -->
        <LinearLayout
            android:id="@+id/user_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/profile_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp">

            <!-- User's Name -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="24sp"
                android:textStyle="bold"
                style="@style/TEXT" />

            <!-- Subscriber Count -->
            <TextView
                android:id="@+id/user_subscriber_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ 1000 subscribers"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                style="@style/TEXT" />
        </LinearLayout>

        <!-- User Email -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_info_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="a@b.con"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            style="@style/TEXT" />

        <!-- Subscribe Button -->
        <com.example.crispycrumbs.viewModel.SubscribeButton
            android:id="@+id/subscribe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />
    </RelativeLayout>

    <!-- Video Playlist Section -->

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/search_bar"
        android:background="@color/background_gray"
        android:iconifiedByDefault="false"
        android:queryHint="@string/search_hint"
        android:textColor="@color/black"
        android:searchIcon="@drawable/search_icon"
        style="@style/SEARCHBAR" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_video"
        tools:listitem="@layout/video_pre_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/SCREEN" />
</LinearLayout>
